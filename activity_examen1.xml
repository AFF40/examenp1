<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examen1">

    <ImageView
        android:id="@+id/atras"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:src="@drawable/atras3"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_below="@+id/atras"
        android:background="@color/design_default_color_secondary"
        android:padding="@padding/20dp"
        android:text="Back"
        android:textcolor="@color/design_default_color_background"
        android:textposition="center"


        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/back"
        android:background="@color/colorAccent"
        android:text="                                         INFLUENZA                                    "
        android:textposition="center"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/back"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorAccent"
        android:src="@drawable/compartir"
        tools:layout_editor_absoluteX="392dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="131dp" />
    <TextView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_below="@+id/atras"
        android:background="@color/design_default_color_secondary"
        android:padding="@padding/20dp"
        android:text="Back"
        android:textcolor="@color/design_default_color_background"
        android:textposition="center"


        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_below="@+id/atras"
        android:background="@color/design_default_color_secondary"
        android:padding="@padding/20dp"
        android:text="Back"
        android:textcolor="@color/design_default_color_background"
        android:textposition="center"


        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="74dp" />

</androidx.constraintlayout.widget.ConstraintLayout>